generator client {
provider = "prisma-client-js"
}


datasource db {
provider = "postgresql"

}


enum Role {
ADMIN
EMPLOYEE
}


model User {
id Int @id @default(autoincrement())
name String @unique
email String @unique
password String
role Role
articles Article[]
}


model Article {
id Int @id @default(autoincrement())
title String
description String?
authorId Int
author User @relation(fields: [authorId], references: [id])
}